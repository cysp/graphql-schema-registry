{
  "name": "graphql-schema-registry",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "node --env-file-if-exists=.env --watch src/index.ts",
    "format": "oxfmt .",
    "format:check": "oxfmt --check .",
    "lint": "oxlint --type-aware --type-check .",
    "lint:fix": "oxlint --type-aware --type-check --fix .",
    "start": "node src/index.ts",
    "test": "node --env-file-if-exists=.env --env-file-if-exists=.env.test --test --experimental-strip-types --enable-source-maps"
  },
  "dependencies": {
    "fastify": "5.7.4",
    "zod": "4.3.6"
  },
  "devDependencies": {
    "@tsconfig/node24": "24.0.4",
    "@types/node": "24.10.13",
    "oxfmt": "0.33.0",
    "oxlint": "1.48.0",
    "oxlint-tsgolint": "0.14.1",
    "typescript": "5.9.3"
  },
  "engines": {
    "node": "24"
  },
  "packageManager": "pnpm@10.30.0"
}
